CYAN='\033[0;36m'
NC='\033[0m' # No Color

echo "${CYAN}>>>>> Setting npm default values for [email, name, url, license, version] <<<<<${NC}"

npm config set init-author-email "bradley.oesch@gmail.com" -g
npm config set init-author-name "Bradley Oesch" -g
npm config set init-author-url "http://bradleyoesch.com" -g
npm config set init-license "MIT" -g
npm config set init-version "0.1.0" -g
